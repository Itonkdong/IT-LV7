@model IEnumerable<LV7.Models.Doctor>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">All Doctors</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hospital.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hospital.Locationtion)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hospital.Name)
        </td>


        <td>
            @Html.DisplayFor(modelItem => item.Hospital.Locationtion)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", "Doctors", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-sm btn-dark" }) |
            @Html.ActionLink("Details", "Details", "Doctors", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-sm btn-dark" }) |
            @Html.ActionLink("Delete", "Delete", "Doctors", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-sm btn-dark" })
        </td>
    </tr>
}

</table>

<p class="text-center">
    @Html.ActionLink("Add Doctor", "Create", "Doctors", htmlAttributes: new { @class = "btn btn-primary" })
</p>
