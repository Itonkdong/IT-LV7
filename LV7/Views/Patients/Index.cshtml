@model IEnumerable<LV7.Models.Patient>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">All Patiens</h2>
<hr />


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PatientCode)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "Details", new {id = item.Id}, htmlAttributes: new {@class = "text-dark font-weight-bold hover-link" })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PatientCode)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit","Patients", new { id=item.Id }, htmlAttributes : new {@class = "btn btn-sm btn-dark"}) |
            @Html.ActionLink("Delete", "Delete", "Patients",new { id=item.Id }, htmlAttributes: new { @class = "btn btn-sm btn-dark" })
        </td>
    </tr>
}

</table>
<p class="text-center ">
    @Html.ActionLink("Add Patient", "Create", "Patiens", htmlAttributes: new { @class = "btn btn-primary" })
</p>
