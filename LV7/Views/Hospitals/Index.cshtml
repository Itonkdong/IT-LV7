@model IEnumerable<LV7.Models.Hospital>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">All Hospitals</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Locationtion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Locationtion)
        </td>
        <td>
            <img alt="@item.Name" src="@item.ImageUrl" width="100" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", "Hospitals", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-sm btn-dark" }) |
            @Html.ActionLink("Details", "Details", "Hospitals", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-sm btn-dark" }) |
            @Html.ActionLink("Delete", "Delete", "Hospitals", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-sm btn-dark" })
        </td>
    </tr>
}

</table>

<p class="text-center">
    @Html.ActionLink("Add Hospital", "Create", "Hospitals", htmlAttributes: new { @class = "btn btn-primary" })
</p>
