@model LV7.Models.Doctor

@{
    ViewBag.Title = "Delete";
}

<h2 class="text-center">Delete Doctor</h2>

<hr />
<div>
    <h5 class="text-uppercase">Are you sure you want to delete this doctor?</h5>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Works at:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Hospital.Name)
        </dd>



    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color mt-2">
            <input type="submit" value="Delete" class="btn btn-default btn-danger" /> |
            @Html.ActionLink("Back to List", "Index", "Doctors", htmlAttributes: new { @class = "btn btn-primary" })
        </div>
    }
</div>
