@model LV7.ViewModels.PatientRegistration

@{
    ViewBag.Title = "AddPatient";
}

<h2 class="text-center">Add Patient for Doctor:</h2>
<hr />

@using (Html.BeginForm("AddPatient", "Doctors"))
{
    
    <div class="form-horizontal">
        <div class="form-group mt-2">
            @Html.DisplayNameFor(model => model.Doctor.Name) <br />
            @Html.DisplayFor(model => model.Doctor.Name)
        </div>
        <div class="form-group mt-2">
            Works At:<br />
            @Html.DisplayFor(model => model.Doctor.Hospital.Name)
        </div>
        <div class="form-group mt-2">
            @Html.DisplayNameFor(model => model.Patients)
            @Html.DropDownListFor(model => model.SelectedPatientId, new SelectList(Model.Patients, "Id", "Name"))
        </div>

        @Html.HiddenFor(model=>model.DoctorId)

        <div class="form-group mt-2">
            <button class="btn btn-success mt">Add Patient</button>
        </div>

    </div>


}

